<body style="background-color:powderblue;">
<div class="container text-center">
<table class="students_listings">
  <thead>
    <tr>
      <th><%= t('students.students_listing.first_name') %></th>
      <th><%= t('students.students_listing.last_name') %></th>
      <th><%= t('students.students_listing.email') %></th>
      <th><%= t('students.students_listing.year_of_birth') %></th>
      <th><%= t('students.students_listing.gender') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.email %></td>
        <td><%= student.year_of_birth %></td>
        <td><%= student.gender %></td>
        <td><%= link_to t('global.show'), student, class: "btn btn-primary" %></td>
        <td><%= link_to t('global.edit'), edit_student_path(student), class: "btn btn-primary" %></td>
        <td><%= link_to t('global.destroy'), student, method: :delete, data: { confirm: t('global.are_you_sure') }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</body>